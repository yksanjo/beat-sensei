# Beat Sensei Supabase Configuration
# Copy this file to .env and fill in your values

# Supabase Project URL (find in Supabase Dashboard → Settings → API)
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (public key for client-side access)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (private key for server-side operations)
# WARNING: Never expose this in client-side code!
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Storage Bucket Name
STORAGE_BUCKET=beat-sensei-samples

# Audio Analysis Settings (for enhanced upload)
AUDIO_ANALYSIS_ENABLED=true
MAX_FILE_SIZE_MB=50

# CDN Settings
CDN_ENABLED=true
CACHE_TTL_SECONDS=31536000  # 1 year cache for audio files

# Rate Limiting
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_MINUTE=60

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Sample Upload Settings
UPLOAD_BATCH_SIZE=50
UPLOAD_MAX_RETRIES=3
UPLOAD_RETRY_DELAY=5  # seconds

# CLI Settings
CLI_USER_AGENT=beat-sensei-cli/1.0.0
CLI_TIMEOUT=30  # seconds

# DeepSeek API (for chatbot)
DEEPSEEK_API_KEY=your-deepseek-api-key-here